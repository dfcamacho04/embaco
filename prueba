<html>
<head>
   <meta charset="utf-8">
  <link rel="stylesheet" href="bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="bootstrap/css/style.css">
  <script type="text/javascript" src="http://code.jquery.com/jquery-latest.min.js"></script>
  <script type="text/javascript">
$(document).ready(function() {
function getRandValue(){
   $.ajax({
        url : "http://api.wunderground.com/api/c0af7de1bc5707a3/conditions/q/pws:IVILLAVI19.json",
        dataType : "jsonp",
      success : function(parsed_json) {
        var station = parsed_json['current_observation']['station_id'];
        var temp_f = parsed_json['current_observation']['temp_f'];
        var presion = parsed_json['current_observation']['pressure_mb']; 
        var humedad = parsed_json['current_observation']['relative_humidity'];
        var precipitacion = parsed_json['current_observation']['precip_today_string'];
        var viento = parsed_json['current_observation']['wind_string'];
        var vientodir = parsed_json['current_observation']['wind_dir'];
        var dewpoint = parsed_json['current_observation']['dewpoint_string'];
        var temperatura = parsed_json['current_observation']['temperature_string'];
        var visibilidad = parsed_json['current_observation']['visibility_km'];
        var tiempo = parsed_json['current_observation']['observation_time_rfc822'];
        var rafaga = parsed_json['current_observation']['wind_gust_kph'];
        var rad_solar = parsed_json['current_observation']['solarradiation'];
        var clima = parsed_json['current_observation']['weather'];
        var uv = parsed_json['current_observation']['UV'];
        $('#station').text(station);  
        $('#presion').text(presion);
        $('#tiempo').text(tiempo);
        $('#humedad').text(humedad);
        $('#precipitacion').text(precipitacion);
        $('#viento').text(viento);
        $('#rafaga').text(rafaga);
        $('#vientodir').text(vientodir);
        $('#temperatura').text(temperatura);
        $('#visibilidad').text(visibilidad);
        $('#dewpoint').text(dewpoint);
        $('#rad_solar').text(rad_solar);
        $('#clima').text(clima);
        $('#uv').text(uv);
      }
   });
};
    getRandValue();
    setInterval(getRandValue, 300000);
});
</script>
</head>
